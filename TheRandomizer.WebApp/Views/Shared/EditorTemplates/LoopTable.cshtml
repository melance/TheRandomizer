@using TheRandomizer.Generators.Table
@model LoopTable

<div class="row" data-item-row>
    <div class="text-info">Loop Table</div>
    <div class="row" name="tableOptions">
        <fieldset class="form-inline">
            <div class="form-group">
                @Html.LabelFor(rt => rt.Name, htmlAttributes: new { @class = "control-label text-left" })
                @Html.TextBoxFor(rt => rt.Name, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(rt => rt.Name, "", htmlAttributes: new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(rt => rt.Column, htmlAttributes: new { @class = "control-label text-left" })
                @Html.TextBoxFor(rt => rt.Column, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(rt => rt.Column, "", htmlAttributes: new { @class = "text-danger" })
            </div>
        </fieldset>
    </div>
</div>
