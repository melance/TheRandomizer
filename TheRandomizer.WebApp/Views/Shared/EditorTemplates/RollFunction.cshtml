@model TheRandomizer.Generators.Dice.RollFunction

<div class="row" name="FunctionRow" data-item-row>
    <div class="form-group col-md-12">
        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2 text-left" })
        <div class="col-md-10">
            <fieldset class="form-inline">
                @Html.TextBoxFor(model => model.Name, htmlAttributes: new { @class = "form-control col-md-10" })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                <div class="form-group col-md-2">
                    <div class="btn-group pull-right">
                        <button type="button" name="DeleteFunction" class="btn btn-default btn-sm pull-right" data-toggle="DeleteItem" title="Delete Function"><span class="glyphicon glyphicon-remove"></span></button>
                    </div>
                </div>
            </fieldset>
        </div>
    </div>
    
    <div class="form-group col-md-12">
        @Html.LabelFor(model => model.DisplayName, htmlAttributes: new { @class = "control-label col-md-2 text-left" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.DisplayName, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.DisplayName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group col-md-12">
        @Html.LabelFor(model => model.Function, htmlAttributes: new { @class = "control-label col-md-2 text-left" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.Function, htmlAttributes: new { @class = "form-control", @style = "max-width: 100%", @rows = "4" })
            @Html.ValidationMessageFor(model => model.Function, "", new { @class = "text-danger" })
        </div>
    </div>
</div>