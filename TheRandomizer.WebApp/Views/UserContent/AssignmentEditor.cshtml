@model TheRandomizer.Generators.Assignment.AssignmentGenerator

@{
    ViewBag.Title = "Assignment Editor";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

@section TRScripts { @Scripts.Render("~/Scripts/TheRandomizer.ItemListMaintenance.js") }

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("AssignmentEditor", "UserContent", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>@(string.IsNullOrWhiteSpace(Model.Name) ? "New Generator" : Model.Name)</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        @Html.EditorFor(bg => bg)

        @*@Html.EditorFor(ag => ag.Items)*@

        @Html.Partial("_LineItemList", Model.Items)

        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" value="Save" class="btn btn-default" name="Submit"/>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

